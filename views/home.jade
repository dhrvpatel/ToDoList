extends layout

block content
    
    .container
      
      hr
      // Title
      .row
        .panel-body
            .row
            .col-lg-6
                    //To-do list detail form
                    form(role='form')
                                                            
                        .form-group
                        label Task
                        |                                             
                        input.form-control(placeholder='Enter things you want to do')
                        br
                        label Date/Time
                        |                                             
                        input.form-control(placeholder='Select Date/Time')
                        |                                                        
                        br
                        label Location
                        |                                             
                        input.form-control(placeholder='Enter Location')
                                              
                        br
                                               
                        button.btn.btn-warning(type='submit') Add
            .col-lg-6
             .panel.panel-default
              .panel-heading To-do list
              ul.nav.nav-tabs
                 li.active
                   a(href='#pending', data-toggle='tab') Pending
                 |       
                 li
                   a(href='#completed', data-toggle='tab') Completed              
               #myTabContent.tab-content
                 #pending.tab-pane.active.in
                   .list-group
                      a.list-group-item(href='#')
                        i.fa.fa-comment.fa-fw
                        |  New Comment
                        |                                     
                        span.pull-right.text-muted.small
                            em 4 minutes ago
                        |                                 
                       a.list-group-item(href='#')
                        i.fa.fa-twitter.fa-fw
                        |  3 New Followers
                        |                                     
                        span.pull-right.text-muted.small
                            em 12 minutes ago
                        |                                 
                       a.list-group-item(href='#')
                        i.fa.fa-envelope.fa-fw
                        |  Message Sent
                        |                                     
                        span.pull-right.text-muted.small
                            em 27 minutes ago

                 #completed.tab-pane.fade
                   .list-group
                       a.list-group-item(href='#')
                        i.fa.fa-shopping-cart.fa-fw
                        |  New Order Placed
                        |                                     
                        span.pull-right.text-muted.small
                            em 9:49 AM
                        |                                 
                       a.list-group-item(href='#')
                        i.fa.fa-money.fa-fw
                        |  Payment Received
                        |                                     
                        span.pull-right.text-muted.small
                            em Yesterday


      .row
      hr
      
      footer
        .row
          .col-lg-12
            p Mobile Design Assignment
    
    
        
       